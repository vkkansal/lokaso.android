<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="1.0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.68">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v4.view.ViewPager>
    </RelativeLayout>
    <!--<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Skip Login"
            android:id="@+id/skiplogin"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:textColor="@color/black" />
    </RelativeLayout>-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="0dp"
        android:layout_weight="0.32">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="126dp"
            android:text="Sign up. You Know you want to."
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="55dp"
            android:text="It will take less than 5 secs."
            android:textSize="10sp"
            android:textColor="@color/black" />

        <com.facebook.login.widget.LoginButton xmlns:fb="http://schemas.android.com/apk/res-auto"
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="75dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            fb:login_text="@string/action_login_with_facebook"
            fb:logout_text="@string/action_login_with_facebook"
            android:padding="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ddd"
            android:weightSum="1.0"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/signupBtn"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="0.5"
                android:layout_marginTop="1dp"
                android:background="#fff"
                android:layout_marginRight="1dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="SIGN UP" />

            <TextView
                android:id="@+id/loginBtn"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="#fff"
                android:layout_marginTop="1dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="LOGIN" />
            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/error_internet_connection"
                android:id="@+id/appTextLabel"
                android:layout_below="@+id/appLogoView"
                android:textColor="@color/white"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="16dp" />-->
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>