<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/questions_list_row_selector"
    android:padding="10dp" >

    <!-- Thumbnail Image -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/questionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="Search User Fullname sd sd vsd vs vs dv sdv sdv sdv sdv sdv sdv sd vsdv sdv"
                android:textSize="17dp"
                android:textStyle="normal"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/questionAuthor"
                android:textSize="14dp"
                android:textStyle="normal"
                android:textColor="@color/light_blue"
                android:layout_marginTop="2dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/questionCreateAt"
                android:singleLine="true"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/questionRemove"
                android:src="@drawable/ic_action_remove"
                android:minHeight="24dp"
                android:minWidth="24dp" />

        </RelativeLayout>
    </LinearLayout>

    <!-- Person Full name -->

    <!-- Status -->

</RelativeLayout>